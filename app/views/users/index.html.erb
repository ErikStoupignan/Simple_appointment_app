<p style="color: green"><%= notice %></p>

<section class="container  h-96">

  <div class="flex justify-center items-center ">
    <h1 class="text-3xl font-bold">Users</h1>
  </div>

  <div id="users" class=" min-w-full min-h-full gap-4 flex justify-center items-center flex-wrap">

    <% @users.each do |user| %>

      <div class=" flex justify-center items-center flex-col min-w-1/4">

        <%= render user %>

        <p class="mt-4 inline-flex items-center justify-center px-4 py-2 text-base leading-5 rounded-md border font-medium shadow-sm transition ease-in-out duration-150 focus:outline-none focus:shadow-outline bg-green-600 border-green-600 text-gray-100 hover:bg-green-500 hover:border-green-500 hover:text-gray-100">
          <%= link_to "Show this user", user %>
        </p>

      </div>

    <% end %>

  </div>

  <div class="flex justify-center bottom-0 left-0">
    <%= link_to "Create new user", new_user_path, class:"mt-4 inline-flex items-center justify-center px-4 py-2 text-base leading-5 rounded-md border font-medium shadow-sm transition ease-in-out duration-150 focus:outline-none focus:shadow-outline bg-red-600 border-red-600 text-gray-100 hover:bg-red-500 hover:border-red-500 hover:text-gray-100" %>
  </div>
</section>